	<script type="text/javascript">
		function func1()
		{
			var i=1;
			if (!(/^\d+$/.test(document.getElementById('W').value))) 
				{
					$("#W").attr("style","border-color: red;");
					i=0;
				} else $("#W").attr("style","border-color: none;");
			if (!(/^\d+$/.test(document.getElementById('H').value))) 
				{
					$("#H").attr("style","border-color: red;");
					i=0;
				} else $("#H").attr("style","border-color: none;");
			if (!(/^\d+$/.test(document.getElementById('BW').value))) 
				{
					$("#BW").attr("style","border-color: red;");
					i=0;
				} else $("#BW").attr("style","border-color: none;");
			if (!(/[a-z]+$/.test(document.getElementById('Col').value))) 
				{
					$("#Col").attr("style","border-color: red;");
					i=0;
				} else $("#Col").attr("style","border-color: none;");
			if (!(/[a-z]+$/.test(document.getElementById('A').value))) 
				{
					$("#A").attr("style","border-color: red;");
					i=0;
				} else $("#A").attr("style","border-color: none;");
			if (i)
			{
				$("#I").attr("style","width:" + document.getElementById('W').value + "px; height:" + document.getElementById('H').value + "px; border:" + document.getElementById('BW').value + "px solid " + document.getElementById('Col').value + ";");
				$("#I").attr("alt",document.getElementById('A').value);
			}
		}
	</script>
